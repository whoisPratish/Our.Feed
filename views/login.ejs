<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      .login-container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 300px;
        text-align: center;
      }

      .login-container h2 {
        margin-bottom: 20px;
        color: #333;
      }

      .login-form {
        display: flex;
        flex-direction: column;
      }

      .form-group {
        margin-bottom: 15px;
      }

      .form-group label {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
      }

      .form-group input {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
      }

      .form-group button {
        background-color: #4caf50;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }

      .form-group button:hover {
        background-color: #45a049;
      }
      .alert {
        display: block;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-size: 16px;
        position: absolute;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
      }

      .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
      }

      .close-btn {
        cursor: pointer;
        float: right;
        font-size: 18px;
        font-weight: bold;
        margin-left: 20px;
        color: red;
      }
    </style>
  </head>
  <body>
    <% if (alert) {%>
    <div id="alertInfo" class="alert alert-info">
      <span class="close-btn" onclick="closeAlert('alertInfo')">&times;</span>
      <strong>Info:</strong> <%=alert%>
    </div>
    <% } %>
    <div class="login-container">
      <h2>Login</h2>
      <form class="login-form" method="post" action="/auth/login">
        <div class="form-group">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" required />
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required />
        </div>
        <div class="form-group">
          <button type="submit">Login</button>
        </div>
        <p>Don't have an account? <a href="/register">Register</a></p>
      </form>
    </div>

    <script>
      function closeAlert(alertId) {
        document.getElementById(alertId).style.display = "none";
      }
    </script>
  </body>
</html>
